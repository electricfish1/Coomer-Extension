{
    "manifest_version": 3,
    "name": "Coomer Helper",
    "description": "Coomer utility",
    "version": "1.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_title": "Click to filter posts",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        }
    }
}